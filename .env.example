# =============================================
# Chatbot Leads StartFranchise - Environment Variables
# =============================================
# Copy this file to .env and fill in your values

# =============================================
# Server Configuration
# =============================================
PORT=3000
NODE_ENV=production

# =============================================
# PostgreSQL Database
# =============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chatbot_leads
DB_USER=postgres
DB_PASSWORD=your_database_password

# =============================================
# Redis Configuration
# =============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================
# WAHA (WhatsApp HTTP API)
# =============================================
WAHA_API_URL=http://localhost:3001
WAHA_SESSION_NAME=default
WAHA_API_KEY=your_waha_api_key
WAHA_WEBHOOK_PATH=/webhook/waha

# =============================================
# Google Sheets Integration
# =============================================
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id
GOOGLE_SHEET_NAME=Informasi Client
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token

# =============================================
# Telegram Notifications
# =============================================
# Multiple admin IDs can be separated by commas
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_ADMIN_CHAT_ID=123456789,987654321

# =============================================
# Rate Limiting & Security
# =============================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
LOCK_TTL_SECONDS=10
USER_COOLDOWN_MS=1000
